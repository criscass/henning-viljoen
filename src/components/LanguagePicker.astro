---
const { lang } = Astro.props;
const isAfrikaans = lang === 'af';
const currentPage = isAfrikaans ? Astro.url.pathname.slice(3) : Astro.url.pathname;
---

<a
	class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
	href={isAfrikaans ? `${currentPage}` : `/af${currentPage}`}>{isAfrikaans ? 'English' : 'Afrikaans'}</a
>
